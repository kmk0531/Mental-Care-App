<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 명상 타이틀 -->
        <TextView
            android:id="@+id/btn_meditation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="명상"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="left"
            android:paddingBottom="8dp" />




        <!-- 명상 유튜브 링크들 (숨김, 토글용) -->
        <LinearLayout
            android:id="@+id/layout_meditation_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/youtube_link_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5분 명상 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/youtube_link_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10분 명상 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/youtube_link_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15분 명상 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/youtube_link_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30분 명상 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>
        <!-- 명상 이미지 -->
        <ImageView
            android:id="@+id/img_meditation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/meditation"
            android:contentDescription="명상 이미지"
            android:layout_marginBottom="16dp" />
        <!-- 스트레칭 타이틀 -->
        <TextView
            android:id="@+id/btn_stretching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스트레칭"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="left"
            android:paddingBottom="8dp" />



        <!-- 스트레칭 유튜브 링크들 (숨김, 토글용) -->
        <LinearLayout
            android:id="@+id/layout_stretching_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/stretching_link_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5분 스트레칭 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/stretching_link_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10분 스트레칭 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/stretching_link_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15분 스트레칭 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/stretching_link_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30분 스트레칭 유튜브"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>
        <!-- 스트레칭 이미지 -->
        <ImageView
            android:id="@+id/img_stretching"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/streching"
            android:contentDescription="스트레칭 이미지"
            android:layout_marginBottom="16dp" />
        <!-- 자가진단 -->
        <TextView
            android:id="@+id/btn_autodiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자가진단"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="left"
            android:paddingBottom="8dp" />
        <!-- 자가진단 테스트 리스트 (숨김, 토글용) -->
        <LinearLayout
            android:id="@+id/layout_autodiagnosis_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/test_link_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="우울증 자가진단 테스트"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/test_link_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="불안장애 자가진단 테스트"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/test_link_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스트레스 자가진단 테스트"
                android:textColor="#1a73e8"
                android:textSize="18sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>